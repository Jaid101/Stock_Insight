<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dark Mode Toggle -->
    <SwitchPreferenceCompat
        android:key="dark_mode"
        android:title="Dark Mode"
        android:summary="Enable dark mode for the app"
        android:defaultValue="false"
        android:icon="@drawable/dark_mode" />

    <!-- Change Password -->
    <Preference
        android:key="change_password"
        android:title="Change Password"
        android:summary="Reset your password via email"
        android:icon="@drawable/change_password" />

    <!-- About Developer -->
    <Preference
        android:key="about_developer"
        android:title="About Developer"
        android:summary="Know more about the app creator"
        android:icon="@drawable/developer" />

</androidx.preference.PreferenceScreen>
